<% if (success && success.length) { %>
  <div role="alert" class="custom-alert flex items-start justify-between gap-2 w-10/12 max-w-xl mx-auto bg-green-100 border border-green-400 text-green-700 p-2 rounded-b-xl shadow-lg transition-all duration-500 ease-in-out">
    <div class="flex items-start gap-3">
      <p class="ms-2"><%= success %></p>
    </div>
    <button class="close-alert text-green-700 hover:text-green-900 text-lg focus:outline-none" aria-label="Close success alert">
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div role="alert" class="custom-alert flex items-start justify-between gap-2 w-10/12 max-w-xl mx-auto bg-red-100 border border-red-400 text-red-700 p-2 rounded-b-xl shadow-lg transition-all duration-500 ease-in-out">
    <div class="flex items-start gap-3">
      <p class="ms-2"><%= error %></p>
    </div>
    <button class="close-alert text-red-700 hover:text-red-900 text-lg focus:outline-none" aria-label="Close error alert">
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>
<% } %>
