<% layout("/layouts/boilarplate") %>

<div  role="alert"
     class="custom-alert flex items-start justify-between gap-2 w-10/12 max-w-xl mx-auto bg-red-100 border border-red-400 text-red-700 p-2 rounded-b-xl shadow-lg transition-all duration-500 ease-in-out">
    <div class="flex items-start gap-3">
        <i class="fa-solid fa-circle-exclamation text-xl  mt-0.5 text-red-600"></i>
        <div>
            <p class="font-semibold">Error</p>
            <p class="text-sm"><%= err.message %></p>
        </div>
    </div>
    <button
            class=" close-alert text-red-700 hover:text-red-900 text-lg focus:outline-none"
            aria-label="Close error alert">
        <i class="fa-solid fa-xmark"></i>
    </button>
</div>